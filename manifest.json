{
  "manifest_version": 3,
  "name": "IVASMS Data Fetcher",
  "version": "1.0",
  "description": "Fetches and stores data from the LiveTestSMS table on a specific page.",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://www.ivasms.com/portal/live/test_sms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ivasms.com/portal/live/test_sms"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}